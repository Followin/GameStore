@model GameStore.Web.Models.Game.DisplayGameViewModel

@{
    ViewBag.Title = "Details";
}

<div class="paper-block">
    <h2>@Html.DisplayFor(model => model.Name): Details</h2>


    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Key)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Key)
        </div>
    </div>

    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Price)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Price) $
        </div>
    </div>
    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.UnitsInStock)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.UnitsInStock)
        </div>
    </div>
    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Discontinued)
        </div>
        <div class="display-field">
            @(Model.Discontinued ? "Yes" : "No")
        </div>
    </div>
    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Publisher)
        </div>
        <div class="display-field">
            <a href="@Url.Action("Details", "Publisher", new {CompanyName = Model.Publisher.CompanyName})">@Model.Publisher.CompanyName</a>
        </div>
    </div>
    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Genres)
        </div>
        <div class="display-field">
            @if (Model.Genres == null || !Model.Genres.Any())
            {
                <span>No Genre</span>
            }
            else
            {
                foreach (var genre in Model.Genres)
                {
                    <span>@genre.Name </span>
                }
            }
        </div>
    </div>

    <div class="display-group">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.PlatformTypes)
        </div>
        <div class="display-field">
            @if (Model.PlatformTypes == null || !Model.PlatformTypes.Any())
            {
                <span>No Supported Platform Types</span>
            }
            else
            {
                foreach (var platformType in Model.PlatformTypes)
                {
                    <span>@platformType.Name </span>
                }
            }
        </div>
    </div>
    <div class="control-links">
        <div class="control-link buy-link-wrapper">
            <a href="@Url.Action("Buy")">Buy</a>
        </div>

        <div class="control-link download-link-wrapper">
            <a href="@Url.Action("Download")" target="_blank">Download</a>
        </div>

        <div class="control-link comments-link-wrapper">
            <a href="@Url.Action("Comments")">Comments</a>
        </div>
    </div>
</div>
