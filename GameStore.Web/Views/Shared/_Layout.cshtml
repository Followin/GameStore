@using GameStore.Web.Concrete
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="The description of my page" />
    @Styles.Render("~/Content/css")
</head>
<body>

    <header>
        <div class="logo">
            <a href="/">
                Game<span class="s-letter">S</span>tore
            </a>
        </div>
        <div class="basket-link">
            <a href="@Url.Action("Index", "Basket")"><i class="fa fa-shopping-cart"></i> Basket</a>
        </div>
        <div class="user">
            Hello, @((User as CustomPrincipal).Id)
        </div>
    </header>
    <div id="games-count" data-href="@Url.Action("GetGamesCount", "Games")">
        <div class="loader">
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
        </div>
    </div>
    <div id="body-wrapper">
        @RenderBody()
    </div>
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/layout")
    @RenderSection("scripts", false)
</body>
</html>
