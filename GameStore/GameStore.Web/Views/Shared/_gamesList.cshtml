@using GameStore.Web.HtmlHelpers
@model GameStore.Web.Models.Game.PagedDisplayGameModel

@if (Model.PagingInfo.TotalPages > 1)
{
    <div class="pagin">
        @Html.PageLinks(Model.PagingInfo, i =>
            new MvcHtmlString("<a name='page' class='page-link" + (i == Model.PagingInfo.CurrentPage ?
                " active" : "") + "'" + "data-page='" + i + "'>" + i.ToString() + "</a>"))
    </div>
}

<div class="element-list">

    @foreach (var game in Model.DisplayModel)
    {
        <div data-img="@Math.Round(game.Price, 2) $" class="element">
            <span class="content">
                <a href="@Url.Action("Details", "Game", new { gamekey = game.Key })">@game.Name</a>
            </span>
        </div>

    }

</div>

