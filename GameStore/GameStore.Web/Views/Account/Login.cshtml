@using GameStore.Web.App_LocalResources
@model GameStore.Web.Models.Account.LoginViewModel
@{
    ViewBag.Title = GlobalRes.Login;
}

<div class="paper-block">
    <h2>@GlobalRes.Login</h2>
    @using (Html.BeginForm("Login", "Account"))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(x => x.ReturnUrl)
        
        
        <div class="form-group">
            @Html.LabelFor(x => x.Login)
            @Html.EditorFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div class="form-group">
            @Html.EditorFor(x => x.RememberMe)
            @Html.LabelFor(x => x.RememberMe)
            @Html.ValidationMessageFor(x => x.RememberMe)
        </div>

        <input type="submit" value="@GlobalRes.LoginAct"/>
    }
</div>

@section scripts {
    @Scripts.Render("~/Scripts/forms")
}