@using System.Security.Claims
@using GameStore.BLL.BankService
@using GameStore.BLL.Services
@using GameStore.Web.App_LocalResources
@using GameStore.Web.Models
@using GameStore.Web.Utils
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="The description of my page" />
    @Styles.Render("~/Content/css")
</head>
<body>

<header>
    <div class="logo">
        <a href="@Url.RouteUrl(new {action = "Index", controller = "Game"})">
            Game<span class="s-letter">S</span>tore
        </a>
    </div>
    <div class="languages">
        <a href="@Url.RouteUrl(UrlRewriter.ReplaceSection("lang", "ru"))">ru</a>
        <a href="@Url.RouteUrl(UrlRewriter.ReplaceSection("lang", "en"))">en</a>
    </div>
    <div class="user">
        @if (User.Identity.IsAuthenticated)
        {
            <span>@User.Identity.Name (@UserUtils.GetRoles())</span>
            <a href="@Url.Action("Logout", "Account")" class="user-control">@GlobalRes.LogoutAct</a>
        }
        else
        {
            <a href="@Url.Action("Login", "Account", new { returnUrl = Request.Url.PathAndQuery})" class="user-control">@GlobalRes.LoginAct</a>
            <a href="@Url.Action("Register", "Account")" class="user-control">@GlobalRes.Register</a>
        }
    </div>
</header>
    <div class="basket-link">
        <a href="@Url.Action("Index", "Basket")"><i class="fa fa-shopping-cart"></i> <span class="basket-text">@GlobalRes.Basket</span></a>
    </div>
    <div id="games-count" data-href="@Url.Action("GetGamesCount", "Game")">
        <div class="loader">
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
            <div class="loader-dot"></div>
        </div>
    </div>
<div id="body-wrapper">
    @RenderBody()
</div>
    <div class="temp-messages">
        <button type="button" id="close-messages-button"><i class="fa fa-times fa-2x"></i></button>
        @if (TempData.ContainsKey("TempMessages"))
        {
            foreach (var message in (IEnumerable<TempMessage>)TempData["TempMessages"])
            {
                <div class="temp-message temp-message-@message.Type.ToString().ToLower()">
                    @message.Message
                    @if (message is LinkTempMessage)
                    {
                        var linkMessage = message as LinkTempMessage;
                        <a href="@linkMessage.LinkHref">@linkMessage.LinkText</a>
                    }
                </div>
            }
        }
    </div>

    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/layout")
    @RenderSection("scripts", false)
</body>
</html>
